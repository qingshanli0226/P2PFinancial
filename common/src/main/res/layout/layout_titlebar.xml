<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_titlebar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottem_bar_height_50"
    android:background="@color/colorBlackBlue"
    android:orientation="vertical">

    <TextView
        android:id="@+id/left_img"
        android:layout_width="@dimen/title_img_width"
        android:layout_height="@dimen/title_img_height"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_centerVertical="true"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/center_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/colorPoleBlue"
        android:textSize="@dimen/title_text_size"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/right_img"
        android:layout_width="@dimen/title_img_width"
        android:layout_height="@dimen/title_img_height"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_10"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_line"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBlue" />
</RelativeLayout>
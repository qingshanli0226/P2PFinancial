<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/title_text" />

    <RadioGroup
        android:id="@+id/mRg_main_bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <RadioButton
            android:id="@+id/mRb_main_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/bottom01_home"
            android:gravity="center"
            android:text="首页"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/mRb_main_moneyInvested"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/bottom02_invested"
            android:gravity="center"
            android:text="投资"
            android:textSize="16sp" />


        <RadioButton
            android:id="@+id/mRb_main_assets"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/bottom03_assets"
            android:gravity="center"
            android:text="我的资产"
            android:textSize="16sp" />


        <RadioButton
            android:id="@+id/mRb_main_evenMore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/bottom04_more"
            android:gravity="center"
            android:text="更多"
            android:textSize="16sp" />

    </RadioGroup>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.LogOutActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">
        <TextView
            android:id="@+id/activityLogOutFinsh"
            android:background="@color/homeActivityTittleBarBackground"
            android:textColor="@color/aboutUsTextColor"
            android:text="@string/activitySignInTextFinsh"
            android:textSize="@dimen/homeActivityTittleBarTextSize"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"/>
        <TextView
            android:textColor="@color/aboutUsTextColor"
            android:background="@color/homeActivityTittleBarBackground"
            android:textSize="@dimen/homeActivityTittleBarTextSize"
            android:gravity="center"
            android:text="@string/activityLogOutTittleText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">

        </TextView>

    </LinearLayout>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/activityLogOutFacebook"
        android:layout_gravity="center"
        android:layout_width="150dp"
        fresco:roundAsCircle="true"
        fresco:roundedCornerRadius="20dp"
        android:layout_height="0dp"
        android:layout_weight="1.5"/>
        <Button
            android:id="@+id/activityLogOutChangePhoto"
            android:layout_gravity="center"
            android:text="@string/activityLogOutButtonTextChange"
            android:textColor="@color/aboutUsTextColor"
            android:background="@color/activityLogOutButtonBackgound"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>
    <Button
        android:id="@+id/activityLogOutExit"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/activityLogOutButtonTextSize"
        android:text="@string/activityLogOutButtonText"
        android:textColor="@color/homeActivityTittleBarTextColor"
        android:background="@color/aboutUsTextColor"
        android:layout_width="330dp"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

    </View>
</LinearLayout>
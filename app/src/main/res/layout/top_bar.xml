<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@mipmap/lock_title_bg">
        <ImageView
            android:id="@+id/top_bar_title_back"
            style="@style/TopBarImageView"
            android:src="@mipmap/left"
            android:layout_marginLeft="@dimen/top_bar_margin_lift_right"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/top_bar_text"
            android:layout_centerHorizontal="true"
            style="@style/TopBarTextView"/>
        <ImageView
            android:id="@+id/top_bar_title_setting"
            style="@style/TopBarImageView"
            android:src="@mipmap/my_setting_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/top_bar_margin_lift_right"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
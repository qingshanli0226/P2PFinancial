<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/investall_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/investall_text_size"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="@string/investall_text"
        android:textColor="@color/investall_text_color"
        android:textStyle="bold"
        android:scrollHorizontally="true"
        />
    <ListView
        android:id="@+id/investall_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/investall_divider_color"
        android:dividerHeight="10dp"
        />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity"
        android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>

    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_rg_height"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_main_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="@string/main_RadioGroup_RadioButton_home_text"
            android:textColor="@color/home_back_unselected"
            android:textSize="@dimen/main_rb_textSize"
            android:gravity="center"
            android:drawableTop="@drawable/main_home"
            android:layout_marginTop="@dimen/main_rb_marginTop"/>

        <RadioButton
            android:id="@+id/rb_main_invest"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="@string/main_RadioGroup_RadioButton_invest_text"
            android:textColor="@color/home_back_unselected"
            android:textSize="@dimen/main_rb_textSize"
            android:gravity="center"
            android:drawableTop="@drawable/main_invest"
            android:layout_marginTop="@dimen/main_rb_marginTop"/>

        <RadioButton
            android:id="@+id/rb_main_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="@string/main_RadioGroup_RadioButton_me_text"
            android:textColor="@color/home_back_unselected"
            android:textSize="@dimen/main_rb_textSize"
            android:gravity="center"
            android:drawableTop="@drawable/main_me"
            android:layout_marginTop="@dimen/main_rb_marginTop"/>

        <RadioButton
            android:id="@+id/rb_main_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="@string/main_RadioGroup_RadioButton_more_text"
            android:textColor="@color/home_back_unselected"
            android:textSize="@dimen/main_rb_textSize"
            android:gravity="center"
            android:drawableTop="@drawable/main_more"
            android:layout_marginTop="@dimen/main_rb_marginTop"/>

    </RadioGroup>

    <!--<include layout="@layout/main_bottom" />-->

</LinearLayout>
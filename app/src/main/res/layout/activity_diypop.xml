<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DIYPopBackgroundBlack"
    android:orientation="vertical"
    tools:context=".View.DIYPop">

    <TextView
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/DIYPopTextTittleText"
        android:textColor="@color/DIYPopTextTittleTextColor"
        android:textSize="@dimen/DIYPopTextTittleTextSize" />
    <TextView
        android:paddingLeft="@dimen/DIYPopTextViewPaddingLeft"
        android:text="@string/DIYPopTextViewText"
        android:textColor="@color/DIYPopTextViewTextColor"
        android:textSize="@dimen/DIYPopTextViewTextSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/DIYPopTextButtonText"
        android:textSize="@dimen/DIYPopTextButtonTextSize" />
</LinearLayout>
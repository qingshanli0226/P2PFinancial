<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RegisterActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/activityButton"
            android:textColor="@color/aboutUsTextColor"
            android:background="@color/homeActivityTittleBarBackground"
            android:textSize="25dp"
            android:text="X"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/homeActivityTittleBarId"
            android:textColor="@color/aboutUsTextColor"
            android:background="@color/homeActivityTittleBarBackground"
            android:textSize="@dimen/homeActivityTittleBarTextSize"
            android:gravity="center"
            android:text="@string/registerActityTittleText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:gravity="center"
            android:textSize="@dimen/registerActivityTextPhoneTextSize"
            android:text="@string/registerActivityTextPhone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/registerEditTextPhonenum"
            android:hint="@string/registerActivityEditTextPhone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:textSize="@dimen/registerActivityTextPassTextSize"
            android:gravity="center"
            android:text="@string/registerActivityTextPassText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/registerEditTextPassword"
            android:hint="@string/registerActivityEditTextPassText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
    </LinearLayout>
    <Button
        android:id="@+id/registerButton"
        android:textSize="@dimen/registerActivityButtonTextSize"
        android:text="@string/registerActivityButtonText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

    </View>

</LinearLayout>
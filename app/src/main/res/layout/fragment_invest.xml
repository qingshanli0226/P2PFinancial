<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <include layout="@layout/common_title"/>
    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/invest_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/invest_tab_height"
        android:background="@color/invest_tab_background"
        app:tl_textUnselectColor="@android:color/white"
        app:tl_textSelectColor="@android:color/black"
        app:tl_textsize="20sp"
        app:tl_indicator_corner_radius="3dp"
        app:tl_indicator_style="BLOCK"
        />
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/invest_vp"
        />

</LinearLayout>
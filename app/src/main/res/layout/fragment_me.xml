<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/common_title"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/my_title_bg"
         >
                <ImageView
                    android:id="@+id/iv_me_icon"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:src="@drawable/my_user_default"
                    android:layout_centerInParent="true"
                    />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_me_icon"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:text="@string/welcome"
                />
        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/recharge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="9dp"
            android:layout_weight="1"
            android:src="@drawable/my_recharge_bg" />

        <ImageView
            android:id="@+id/withdraw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_weight="1"
            android:src="@drawable/my_withdraw_bg" />
    </LinearLayout>
    <TextView
      style="@style/LoginStyle"
        android:id="@+id/tv_me_invest"
        android:drawableStart="@drawable/my_invest_manage"
        android:text="@string/me_title1"
        />

    <TextView
        android:id="@+id/tv_me_intuition"
      android:drawableStart="@drawable/my_reward_manage"
        style="@style/LoginStyle"
        android:text="@string/me_title2"
        />

    <TextView
        android:id="@+id/tv_me_assets"
        style="@style/LoginStyle"
        android:text="@string/me_title3"
        android:drawableStart="@drawable/my_asset_manage"
        />


</LinearLayout>
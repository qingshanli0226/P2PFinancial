<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/common_title"/>
    <TextView
        android:id="@+id/tv_more_register"
        android:layout_width="match_parent"
        style="@style/MoreTextStyle"
        android:text="@string/register1"
        android:drawableStart="@drawable/icon_more_regist"
        />

    <TextView
      style="@style/long_horizontalSplitLine"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_more_secret"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/MoreTextStyle"
            android:text="@string/gesture"
            android:drawableStart="@drawable/icon_more_secret"
            />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:id="@+id/iv_more_switch"
            />
    </LinearLayout>




    <TextView

        style="@style/long_horizontalSplitLine"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_more_reset"
            android:drawableStart="@drawable/icon_more_reset"
            style="@style/MoreTextStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/reset_gesture" />


    </LinearLayout>


    <TextView
        style="@style/long_horizontalSplitLine"
        />
    <TextView
        android:id="@+id/iv_more_contact"
        android:drawableStart="@drawable/icon_more_contact"
        android:layout_width="match_parent"
        style="@style/MoreTextStyle"
        android:text="@string/customerService"
        />

    <TextView
        style="@style/long_horizontalSplitLine"
        />
    <TextView
        android:id="@+id/iv_more_sms"
        android:layout_width="match_parent"
        style="@style/MoreTextStyle"
        android:text="@string/feedback"
        android:drawableStart="@drawable/icon_more_sms"
        />

    <TextView
        style="@style/long_horizontalSplitLine"
        />
    <TextView
        android:id="@+id/iv_more_share"
        android:layout_width="match_parent"
        style="@style/MoreTextStyle"
        android:text="@string/share"
        android:drawableStart="@drawable/icon_more_share"
        />

    <TextView
        style="@style/long_horizontalSplitLine"
        />
    <TextView
        android:id="@+id/tv_more_about"
        android:layout_width="match_parent"
        style="@style/MoreTextStyle"
        android:text="@string/abountGuiGu"
        android:drawableStart="@drawable/icon_more_about"
        />



</LinearLayout>
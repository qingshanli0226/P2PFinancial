<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/common_title_color"
    android:layout_height="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height"
        android:layout_gravity="center"
        >

        <ImageView
            android:id="@+id/iv_title_black"
            android:layout_width="@dimen/title_img_size"
            android:layout_height="@dimen/title_img_size"
            android:src="@mipmap/back"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/com_title_size"
            android:textColor="@android:color/white"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/iv_title_setting"
            android:layout_width="@dimen/title_img_size"
            android:layout_height="@dimen/title_img_size"
            android:src="@mipmap/setting"
            android:layout_gravity="center"
            />
    </LinearLayout>

</LinearLayout>
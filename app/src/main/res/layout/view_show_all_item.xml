<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <TextView
        android:id="@+id/showTitle"
        android:text="新手福利计划"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/center"
        android:layout_below="@id/showTitle"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/moneyTe"
        android:layout_below="@id/center"
        android:text="产品金额"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/money"
        android:layout_below="@id/moneyTe"
        android:text="200"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_toRightOf="@id/money"
        android:layout_below="@id/moneyTe"
        android:text="万"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/yearTe"
        android:text="预期年利率"
        android:layout_below="@id/center"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/year"
        android:text="8.00"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/yearTe"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/yearTe"
        android:layout_toRightOf="@id/year"
        android:text="%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.example.month6.view.customviews.CustomProgressView
        android:id="@+id/view_progress"
        android:layout_alignParentRight="true"
        android:layout_width="60dp"
        android:layout_height="60dp"/>
</RelativeLayout>

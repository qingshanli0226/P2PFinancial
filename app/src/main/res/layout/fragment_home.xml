<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.activirys.MainActivity"
    android:id="@+id/rela">

    <com.example.month6.view.customviews.CustomTopView
        android:id="@+id/homeTitleView"
        app:titleText="@string/home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_below="@id/homeTitleView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bannerheight"/>
    <TextView
        android:id="@+id/plan"
        android:text="@string/plantitle"
        android:textSize="@dimen/title_text"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/plan"
        android:text="@string/planone"
        style="@style/homeBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/teLi"
        android:layout_below="@id/plan"
        android:layout_centerHorizontal="true"
        android:text="@string/plantwo"
        style="@style/homeBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/plan"
        android:layout_alignParentRight="true"
        android:text="@string/planthree"
        style="@style/homeBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.example.month6.view.customviews.CustomProgressView
        android:id="@+id/proGrossView"
        android:layout_below="@id/teLi"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/prosize"
        android:layout_height="@dimen/prosize"/>
    <Button
        android:id="@+id/interBut"
        android:layout_below="@id/proGrossView"
        android:text="@string/planbut"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/bigbut_text"
        android:textColor="@color/white"
        android:background="@color/red"
        android:layout_width="@dimen/bannerheight"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/interBut"
        android:text="@string/planbuttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>

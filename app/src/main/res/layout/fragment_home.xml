<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:atguigu="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.common.view.MyTitlebar
        android:id="@+id/mtitlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height">

    </com.example.common.view.MyTitlebar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.example.common.view.MyScrollView
            android:id="@+id/layout_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fragment_home_bannerheight">

                    <com.youth.banner.Banner
                        android:id="@+id/mbanner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_home_product"
                    style="@style/MyTextViewStyle"
                    android:layout_marginTop="@dimen/fragment_home_productmargin"
                    android:layout_marginBottom="@dimen/fragment_home_productmargin"
                    android:drawableRight="@drawable/recommend"
                    android:drawablePadding="@dimen/fragment_home_productdrawablepadding"
                    android:text="@string/fragment_home_producttext"
                    android:textSize="@dimen/Mytextsize" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fragment_home_layoutmargin"
                    android:layout_marginRight="@dimen/fragment_home_layoutmargin"
                    android:layout_marginBottom="@dimen/fragment_home_layoutmarginsmall">

                    <TextView
                        style="@style/MyTagTextViewStyle"
                        android:background="@drawable/home_attribute_bg"
                        android:text="@string/fragment_home_tagtext1"/>

                    <TextView
                        style="@style/MyTagTextViewStyle"
                        android:layout_marginLeft="@dimen/fragment_home_textandtextmargin"
                        android:layout_marginRight="@dimen/fragment_home_textandtextmargin"
                        android:background="@drawable/home_attribute_bg"
                        android:text="@string/fragment_home_tagtext2"/>

                    <TextView
                       style="@style/MyTagTextViewStyle"
                        android:background="@drawable/home_attribute_bg"
                        android:text="@string/fragment_home_tagtext3"/>

                </LinearLayout>

                <com.example.common.view.MyRoundView
                    android:id="@+id/roundPro_home"
                    android:layout_width="@dimen/fragment_home_MyRoundViewSize"
                    android:layout_height="@dimen/fragment_home_MyRoundViewSize"
                    android:layout_marginTop="@dimen/MyTopMargin"
                    atguigu:max="@integer/fragment_home_MyRoundViewTopMax"
                    atguigu:roundColor="@color/more_text"
                    atguigu:roundProgressColor="@color/round_red_common"
                    atguigu:roundWith="@dimen/fragment_home_MyRoundViewroundWith"
                    atguigu:textColor="@color/title_back"
                    atguigu:textSize="@dimen/fragment_home_MyRoundViewtextsize" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/MyTopMargin">

                    <TextView
                        style="@style/MyTextViewStyle"
                        android:text="@string/fragment_home_yearratetitletext"
                        android:textSize="@dimen/Mytextsizesmall" />

                    <TextView
                        android:id="@+id/tv_home_yearrate"
                        style="@style/MyTextViewStyle"
                        android:text="@string/fragment_home_yearratetext"
                        android:textSize="@dimen/Mytextsizesmall"
                        />

                </LinearLayout>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/home"
                    android:text="@string/fragment_home_joinbuttontext"
                    android:textColor="@color/white"
                    android:textSize="30sp" />


                <TextView
                    style="@style/MyTagTextViewStyle"
                    android:drawableLeft="@drawable/guarantee_icon"
                    android:text="@string/fragment_home_bottomtag" />

            </LinearLayout>
        </com.example.common.view.MyScrollView>
        <com.example.common.view.MyLoadingPage
            android:id="@+id/mLoadingPage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

        </com.example.common.view.MyLoadingPage>
    </FrameLayout>

</LinearLayout>
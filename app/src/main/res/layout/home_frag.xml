<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.activiry.MainActivity">

    <com.example.month6.view.diyview.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_below="@id/titleView "
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <TextView
        android:id="@+id/plan"
        android:text="硅谷彩虹新手计划"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/plan"
        android:text="本息保障"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/bootomstyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/teLi"
        android:layout_below="@id/plan"
        android:layout_centerHorizontal="true"
        android:text="每日计息"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/bootomstyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/plan"
        android:layout_alignParentRight="true"
        android:text="高额收益"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/bootomstyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.example.month6.view.diyview.ProGrossView
        android:id="@+id/proGrossView"
        android:layout_below="@id/teLi"
        android:layout_centerHorizontal="true"
        android:layout_width="130dp"
        android:layout_height="130dp"/>
    <Button
        android:id="@+id/interBut"
        android:layout_below="@id/proGrossView"
        android:text="立即加入"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="#FFF"
        android:background="#F44336"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/interBut"
        android:text="预期年利率:8.00%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>

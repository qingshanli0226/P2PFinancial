<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/welcome_layout"
    android:layout_height="match_parent"
    tools:context=".mvp.view.activity.WelcomeActivity"
    android:background="@mipmap/start_background">
    <ImageView
        android:id="@+id/iv_welcome_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/image_margin_top"
        android:background="@mipmap/app_icon" />

    <TextView
        android:layout_below="@id/iv_welcome_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/text_margin_top"
        android:text="@string/welcome_app_name"
        android:textSize="@dimen/text_app_name_size"
        style="@style/WelcomeTextVersions"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/versions_margin_bottom"
        android:orientation="horizontal">

        <TextView
            android:text="@string/welcome_bottom_text_versions"
            style="@style/WelcomeTextVersions"
            android:textSize="@dimen/welcome_bottom_text_size"/>

        <TextView
            android:id="@+id/tv_welcome_version"
            style="@style/WelcomeTextVersions"
            android:text="@string/welcome_bottom_text_number"
            android:textSize="@dimen/welcome_bottom_text_size"/>

    </LinearLayout>
</RelativeLayout>
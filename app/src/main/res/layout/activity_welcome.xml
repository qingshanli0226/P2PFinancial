<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_background"
    tools:context=".WelcomeActivity">

    <ImageView
        android:id="@+id/iv_welcome_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/appicon_topmargin"
        android:background="@drawable/app_icon" />

    <TextView
        style="@style/WelcomeTextViewStyle"
        android:layout_below="@id/iv_welcome_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/MyTopMargin_20"
        android:text="@string/welcome_title"
        android:textSize="@dimen/Mytextsize_40" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/appicon_welcome_versionmargin"
        android:orientation="horizontal">

        <TextView
            style="@style/WelcomeTextViewStyle"
            android:text="@string/welcome_versiontext"
            android:textSize="@dimen/Mytextsize_15" />

        <TextView
            android:id="@+id/tv_welcome_version"
            style="@style/WelcomeTextViewStyle"
            android:text="1.1"
            android:textSize="@dimen/Mytextsize_15" />

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_layout">
    <com.youth.banner.Banner
        android:id="@+id/home_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_banner_height"/>
    <TextView
        android:layout_marginTop="@dimen/home_margin_top"
        android:id="@+id/home_name"
        android:layout_below="@id/home_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:drawablePadding="@dimen/home_name_drawable_padding"
        android:textSize="@dimen/home_name_text_size"
        android:gravity="center"
        android:drawableRight="@mipmap/recommend"/>
    <LinearLayout
        android:layout_marginTop="@dimen/home_margin_top"
        android:layout_below="@id/home_name"
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_title_one"
            android:background="@drawable/home_text_border"
            android:paddingLeft="@dimen/home_text_padding_left_right"
            android:paddingTop="@dimen/home_text_padding_top_bottom"
            android:paddingBottom="@dimen/home_text_padding_top_bottom"
            android:paddingRight="@dimen/home_text_padding_left_right"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_title_one"
            android:layout_marginLeft="@dimen/home_text_margin_left_right"
            android:layout_marginRight="@dimen/home_text_margin_left_right"
            android:background="@drawable/home_text_border"
            android:paddingLeft="@dimen/home_text_padding_left_right"
            android:paddingTop="@dimen/home_text_padding_top_bottom"
            android:paddingBottom="@dimen/home_text_padding_top_bottom"
            android:paddingRight="@dimen/home_text_padding_left_right"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_title_one"
            android:background="@drawable/home_text_border"
            android:paddingLeft="@dimen/home_text_padding_left_right"
            android:paddingTop="@dimen/home_text_padding_top_bottom"
            android:paddingBottom="@dimen/home_text_padding_top_bottom"
            android:paddingRight="@dimen/home_text_padding_left_right"/>
    </LinearLayout>
    <jni.example.p2pinvest.view.Home_Arc
        android:layout_marginTop="@dimen/home_margin_top"
        android:id="@+id/home_arc"
        android:layout_below="@id/ll"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/round_progress_size"
        android:layout_height="@dimen/round_progress_size"/>
    <TextView
        android:id="@+id/home_yearRate"
        android:layout_marginTop="@dimen/home_margin_top"
        android:layout_below="@id/home_arc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_text_year_rate"
        android:gravity="center"
        android:textSize="@dimen/home_year_rate_text_size"/>
    <LinearLayout
        android:id="@+id/ll2"
        android:layout_below="@id/home_yearRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <Button
            android:id="@+id/home_btn_join"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/home_btn_style"
            android:text="@string/home_btn_text"
            android:textColor="@color/color_white"
            android:textSize="@dimen/home_btn_text_size"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_text_risk"
        android:drawableLeft="@mipmap/guarantee_icon"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ll2"/>
    <ImageView
        android:id="@+id/home_load_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/loading_color"
        android:visibility="gone"/>
</RelativeLayout>
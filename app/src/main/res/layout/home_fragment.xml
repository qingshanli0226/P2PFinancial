<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_layout">
    <com.youth.banner.Banner
        android:id="@+id/home_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_banner_height"/>
    <TextView
        android:id="@+id/home_name"
        android:layout_below="@id/home_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:drawablePadding="@dimen/home_name_drawable_padding"
        android:textSize="@dimen/home_name_text_size"
        android:gravity="center"
        android:drawableRight="@mipmap/recommend"/>
    <LinearLayout
        android:layout_below="@id/home_name"
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_title_one"
            android:background="@drawable/home_text_border"
            android:padding="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_title_one"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_title_one"/>
    </LinearLayout>
    <jni.example.p2pinvest.view.Home_Arc
        android:id="@+id/home_arc"
        android:layout_below="@id/ll"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/round_progress_size"
        android:layout_height="@dimen/round_progress_size"/>
    <ImageView
        android:id="@+id/home_load_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:visibility="gone"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SecondaryPage.AboutUsActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:textColor="@color/aboutUsTextColor"
            android:background="@color/homeActivityTittleBarBackground"
            android:textSize="25dp"
            android:text="s"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/homeActivityTittleBarId"
            android:textColor="@color/aboutUsTextColor"
            android:background="@color/homeActivityTittleBarBackground"
            android:textSize="@dimen/homeActivityTittleBarTextSize"
            android:gravity="center"
            android:text="@string/radioButtonHomePage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7">

        </TextView>
    </LinearLayout>
    <TextView

        android:textSize="@dimen/activityAboutUsTextSize"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"/>
</LinearLayout>
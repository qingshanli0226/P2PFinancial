<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.p2pdemo.CustomView.MyTitleBar
        android:id="@+id/invest_TitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.example.p2pdemo.CustomView.MyTitleBar>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/invest_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabSelectedTextColor="@color/invest_tabSelectColor"
        app:tabTextColor="@color/invest_textColor"
        app:tabIndicatorHeight="0dp"
        >

    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/invest_VP"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.viewpager.widget.ViewPager>

</LinearLayout>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ButtorBarImg">
<!--        <item name="android:layout_weight">35dp</item>-->
<!--        <item name="android:layout_height">35dp</item>-->
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="ButtorBarText">
         <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_centerHorizontal">true</item>

    </style>
    <style name="MyFragButSytle">

        <item name="android:layout_marginTop">1dp</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableRight">@drawable/right</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">@color/product_detail</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="MoreTvStyle">

        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/more_tv</item>
        <item name="android:textSize">25dp</item>
    </style>


</resources>

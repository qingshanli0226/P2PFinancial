<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MoreTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/more_text</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!--    注册界面布局TextView-->
    <style name="RegistTextViewTitle">
        <item name="android:layout_width">@dimen/app_activity_regist_tv_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/app_activity_regist_tv_text_color</item>
        <item name="android:textSize">@dimen/app_activity_regist_tv_text_size</item>
    </style>


    <!--    注册界面布局LinearLayout-->
    <style name="RegistLl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/app_activity_regist_ll_height</item>
        <item name="android:paddingLeft">@dimen/app_activity_regist_ll_padding</item>
        <item name="android:paddingRight">@dimen/app_activity_regist_ll_padding</item>
    </style>

    <!--    注册界面布局LinearLayout-->
    <style name="RegistEt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#5c5c5c</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RegistBt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
    </style>


    <!-- MeFragment中最下面的3个选项的通用的设置 -->
    <style name="LoginStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableRight">@drawable/right</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">@color/product_detail_common</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MyTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/product_detail_common</item>
    </style>
    <style name="MyTagTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">@integer/fragment_home_MyRoundViewTopweight</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/home_back_unselected</item>
        <item name="android:padding">@dimen/fragment_home_textpadding</item>
    </style>
    <style name="mainbottomradiobutton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">@integer/fragment_home_MyRoundViewTopweight</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/mainbottomradiobuttonpadding</item>
    </style>
    <style name="investmenttesttextview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/fragment_investment_trottinghorseText</item>
        <item name="android:textSize">@dimen/Mytextsize</item>
        <item name="android:textColor">@color/product_red_common</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>
    <style name="investmentallrecycleritemtextview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/Mytextsizesmaller</item>
    </style>
    <style name="investmentallrecycleritemtextview2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/Mytextsizesmallest</item>
        <item name="android:textColor">@color/product_detail_common</item>
        <item name="android:drawablePadding">@dimen/fragment_home_productdrawablepadding</item>
        <item name="android:layout_marginLeft">@dimen/fragment_home_productdrawablepadding</item>
    </style>
    <style name="inbestmentallrecycleritemRoundView">
        <item name="android:layout_width">@dimen/fragment_investmentall_MyRoundViewSize</item>
        <item name="android:layout_height">@dimen/fragment_investmentall_MyRoundViewSize</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginTop">@dimen/fragment_investmentall_MyRoundViewmargin</item>
    </style>
</resources>

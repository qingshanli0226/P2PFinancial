<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_common_title_layout_linear_height"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_common_title_layout_linear_height"
        android:background="@drawable/lock_title_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_title_back"
            android:layout_width="@dimen/app_common_title_image_view_width"
            android:layout_height="@dimen/app_common_title_image_view_width"
            android:layout_marginLeft="@dimen/app_common_title_image_view_margin_left"
            android:src="@drawable/left" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/app_common_title_tv_text"
            android:textColor="@color/title_text"
            android:textSize="@dimen/app_common_title_tv_size" />

        <ImageView
            android:id="@+id/iv_title_setting"
            android:layout_width="@dimen/app_common_title_image_view_width"
            android:layout_height="@dimen/app_common_title_image_view_width"
            android:layout_marginLeft="@dimen/app_common_title_image_view_margin_left"
            android:src="@drawable/my_setting_icon" />
    </LinearLayout>
</LinearLayout>
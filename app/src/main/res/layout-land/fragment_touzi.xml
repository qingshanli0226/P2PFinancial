<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    style="@style/marth"
    tools:ignore="MissingDefaultResource">
    <include layout="@layout/custor_commontitle"></include>
    <RadioGroup
        android:layout_marginTop="@dimen/one"
        android:id="@+id/gr"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottotop">
        <RadioButton
            android:id="@+id/tab1"
            android:checked="true"
            android:text="@string/all"
            style="@style/touzi_rb"

         ></RadioButton>
        <RadioButton
            android:id="@+id/tab2"
            android:text="@string/tuijian"
            style="@style/touzi_rb"
           ></RadioButton>
        <RadioButton
            android:id="@+id/tab3"
            style="@style/touzi_rb"
            android:text="@string/remen"
          ></RadioButton>
    </RadioGroup>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp"
         style="@style/marth"></androidx.viewpager.widget.ViewPager>
</LinearLayout>
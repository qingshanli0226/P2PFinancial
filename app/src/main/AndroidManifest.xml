<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.p2pdemotext">

    <uses-permission android:name="android.permission.INTERNET" />
    写SD卡权限:
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    读SD卡权限:
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    读取联系人的权限：
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    读取短信的权限：
    <uses-permission android:name="android.permission.READ_SMS" />

    <application
        android:name=".Appinit.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Base.GuildActivity" />
        <activity android:name=".ui.GuildeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.HomeActivity" />
        <activity android:name=".ui.RegardsActivity" />
        <activity android:name=".ui.SecondaryPage.AboutUsActivity" />

        <service android:name=".ServiceClass.MyService" />
        <service android:name=".Myapplication.ServicePackage.CacheService" />

        <activity
            android:name=".ui.SecondaryPage.SignInActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.LogOutActivity"
            android:launchMode="singleTask" />
        <activity android:name=".View.DIYPop"></activity>
    </application>

</manifest>